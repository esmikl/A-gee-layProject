<h1>Edit Note</h1>

<%= link_to 'My Notes', notes_path, class: "btn" %>
<%= link_to 'Share', share_note_path(@note), class: "btn", method: :put if @note.slug.blank? %>
<%= link_to 'Unshare', unshare_note_path(@note), class: "btn", method: :put if @note.slug.present? %>
<br><br>
<% if @note.slug.present? %>
  <p>
    <strong>Shareable URL: </strong><%= url_for :controller => "shared_notes", :action => "show", :id => @note.slug, host: "localhost", port: "3000"%>
  </p>
<% end %>

<%= render 'form' %>
