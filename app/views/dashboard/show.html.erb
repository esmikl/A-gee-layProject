<h1>Dashboard</h1>

<table>
    <thead>
        <tr>
          <th>Recent Notes</th>
          <th>Last Updated</th>
        </tr>
    </thead>
  <tbody>
    <% @recent_notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, edit_note_path(note), class: "dashboardTitle link" %></td>
        <td><%= time_ago_in_words(note.updated_at) %> ago</td>
        <td><%= link_to image_tag("trashcan.png"), note, method: :delete, data: { confirm: 'Are you sure?' }, class: "trash" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Note', new_note_path, class: "btn" %>
